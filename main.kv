<Main>:
	padding: 8, 8, 8, 8
	orientation: "vertical"
	Label:
		id: operation
		text: ""
		size_hint_y: 0.1
		font_size: "36sp"
		halign: "right"
		text_size: self.size
	GridLayout:
		cols: 4
		#size_hint_y: 0.6
		Button:
			text: "7"
			on_release: root.set_value(self.text)
		Button:
			text: "8"
			on_release: root.set_value(self.text)
		Button:
			text: "9"
			on_release: root.set_value(self.text)
		Button:
			text: "+"
			on_release: root.add()
		Button:
			text: "4"
			on_release: root.set_value(self.text)
		Button:
			text: "5"
			on_release: root.set_value(self.text)
		Button:
			text: "6"
			on_release: root.set_value(self.text)
		Button:
			text: "-"
			on_release: root.sub()
		Button:
			text: "1"
			on_release: root.set_value(self.text)
		Button:
			text: "2"
			on_release: root.set_value(self.text)
		Button:
			text: "3"
			on_release: root.set_value(self.text)
		Button:
			text: "*"
			on_release: root.mul()
		Button:
			text: "C"
			on_release: root.clear()
		Button:
			text: "0"
			on_release: root.set_value(self.text)
		Button:
			text: "DEL"
			on_release: root.delete()
		Button:
			text: "/"
			on_release: root.div()
	BoxLayout:
		size_hint_y: 0.2
		Button:
			text: "="
			size_hint_x: 0.75
			on_release: root.equal()
		Button:
			text: "."
			size_hint_x: 0.25
			on_release: root.set_value(self.text)
